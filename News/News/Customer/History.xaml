                            <Label Text="7700р" TextColor="White" FontSize="18" Margin="0, 0, 10, 0"/>
                            <ImageButton Source="arrow.png" WidthRequest="20" HeightRequest="20" BackgroundColor="Transparent"/>
                        </FlexLayout>
                    </StackLayout>
                </ScrollView>
            </Frame>
        </StackLayout>
    </Frame>
</ContentPage>